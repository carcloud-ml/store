    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "@types/scriptable-ios": "^1.6.1",
    "@umijs/preset-react": "1.x",
    "antd-mobile": "^2.3.4",
    "postcss-plugin-px2rem": "^0.8.1",
    "react-sticky": "^6.0.3",
    "umi": "^3.3.3"
  },
  "devDependencies": {
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-sticky": "^6.0.3",
    "@umijs/test": "^3.3.3",
    "lint-staged": "^10.0.7",
    "prettier": "^2.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0",
    "@umijs/fabric": "^2.2.0",
    "eslint": "^7.14.0",
    "stylelint": "^13.8.0",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0"
  }
}
